{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "lib": ["ES2018", "ESNext.Array"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
